extends layout

block content
    h1= title
    form(name="new-user", action="/users/new", method="post")
        div.input
            span.label userid
            input(type="text", name="userid")
        div.input
            span.label firstname
            input(type="text", name="firstname")
        div.input
            span.label lastname
            input(type="text", name="lastname")
        div.input
            span.label email
            input(type="text", name="email")
        div.input
            span.label password
            input(type="text", name="password")
        div.actions
            input(type="submit", value="Create Account!")
